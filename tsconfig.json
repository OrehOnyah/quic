{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noImplicitReturns": false,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "debug",
    "node_modules",
    "bench",
    "dist",
    "example",
    "test"
  ]
}
